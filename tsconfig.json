{
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "noImplicitAny": false,
    "sourceMap": true,
    "mapRoot": "",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "outDir": "dist",
    "skipLibCheck": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@c1/app": [ "src/app" ],
      "@c1/components": [ "src/components" ],
      "@c1/creditcard": [ "src/creditcard" ],
      "@c1/mockability": [ "src/mockability" ],
      "@c1/mocks": [ "src/mocks" ],
      "@c1/creditcard/creditcard.module": [ "src/creditcard/creditcard.module"]
    }
  },
  "files": [
    "src/main.ts",
    "src/creditcard/index.ts",
    "src/creditcard/close-account/close-account.module.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "./dist/aot",
    "skipMetadataEmit" : true
  }
}
